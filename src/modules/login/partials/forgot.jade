div.row
  div.col-sm-6
    div.page-header
      h1 Forgot Your Password?
    form(ng-submit='forgot()' name='forgotForm' novalidate)
      alert(type="danger" ng-show="error" close="error = null") {{error}}
      div.form-group
        label.control-label Enter Your Email:
        input.form-control(type='text' ng-model='email' name='email' required)
      div.form-actions
        button.btn.btn-primary(type='submit' ng-disabled='forgotForm.$invalid') Send Reset
        |&nbsp;
        a.btn.btn-link(href='/login/') Back to Login
