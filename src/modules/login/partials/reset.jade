div.row
  div.col-sm-6
    div.page-header
      h1 Reset Your Password
    form(ng-submit='reset()' name='resetForm' novalidate)
      div.form-group
        label.control-label New Password:
        input.form-control(type='password' ng-model='password' name='password' required)
      div.form-group
        label.control-label Confirm Password:
        input.form-control(type='password' ng-model='confirm' name='confirm' required)
      div.form-actions
        button.btn.btn-primary(type='submit' ng-disabled='resetForm.$invalid') Set Password
        |&nbsp;
        a.btn.btn-link(href='/login/') Back to Login
