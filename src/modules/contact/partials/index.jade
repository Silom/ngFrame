div.row
  div.col-sm-6
    div.page-header
      h1 Send A Message
    form(ng-submit='contact()' name='contactform' novalidate)
      div.form-group
        label Your Name:
        input.form-control(type='text' ng-model='name' name='name' required)
      div.form-group
        label Your Email:
        input.form-control(type='text' ng-model='email' name='email' required)
      div.form-group
        label Message:
        textarea.form-control(name='message' ng-model='message' rows='5' required)
      div.form-group
        button.btn.btn-primary(type='submit' ng-disabled='contactform.$invalid') Send Message

  div.col-sm-6.special
    div.page-header
      h1 Contact Us
    p.lead Freddy can't wait to hear from you.
    i.fa.fa-reply-all.super-awesome
    address 1428 Elm Street &bull; San Francisco, CA 94122
