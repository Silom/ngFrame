    div#results-table
      table.table.table-striped
        thead
          tr
            th
            th pivot
            th.stretch name
            th id
        tbody#results-rows
          tr(ng-repeat='status in statusList' ng-hide='statusList.length === 0')
            td
              input.btn.btn-default.btn-sm.btn-details(type='button' value='Edit' ui-sref='admin.statusdetail({ id: status._id })')
            td {{status.pivot}}
            td {{status.name}}
            td.nowrap {{status._id}}

