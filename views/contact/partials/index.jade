div.row
  div.col-sm-6
    div.page-header
      h1 Send A Message
    form
      div.form-group
        label Your Name:
        input.form-control(type='text' name='name')
      div.form-group
        label Your Email:
        input.form-control(type='text' name='email')
      div.form-group
        label Message:
        textarea.form-control(name='message' rows='5')
      div.form-group
        button.btn.btn-primary.btn-contact(type='button') Send Message

  div.col-sm-6.special
    div.page-header
      h1 Contact Us
    p.lead Freddy can't wait to hear from you.
    i.fa.fa-reply-all.super-awesome
    address 1428 Elm Street &bull; San Francisco, CA 94122
